{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "plugins": ["import", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "linebreak-style": 0,
    "indent": ["error", 2, { "MemberExpression": 1 }],
    "no-underscore-dangle": 0,
    "no-undef": 0
  }
}
