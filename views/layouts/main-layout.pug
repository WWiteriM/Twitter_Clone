    body
        script.
            const userLoggedIn = !{userLoggedInJs};
        .wrapper
            .row
                nav.col-2
                    a.blue(href='/')
                        i.fab.fa-twitter-square
                    a(href='/')
                        i.fas.fa-home
                    a(href='/search')
                        i.fas.fa-search
                    a(href='/notifications')
                        i.fas.fa-bell
                        span#notificationBadge
                    a(href='/messages')
                        i.fas.fa-envelope
                        span#messagesBadge
                    a(href='/profile')
                        i.fas.fa-user
                    a(href='/logout')
                        i.fas.fa-sign-out-alt
                .mainSectionContainer.col-10.col-md-8.col-lg-6
                    .titleContainer
                        h1 #{pageTitle}
                        block headerButton
                    block content

                .d-none.d-md-block.col-md-2.col-lg-4


        script(src='https://kit.fontawesome.com/85404227e2.js', crossorigin='anonymous')
